<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.YogaTypesActivity">

    <View
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0DFFFDFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:paddingBottom="10dp"
        android:text="Yoga"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="674dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/yoga1"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/adho_mukha_svanasana_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/yoga2"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/balasana"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga1" />

                <ImageView
                    android:id="@+id/yoga3"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gomukhasana_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga2" />

                <ImageView
                    android:id="@+id/yoga4"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lotus_pose_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga3" />

                <ImageView
                    android:id="@+id/yoga5"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/trikonasana_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga4" />

                <ImageView
                    android:id="@+id/yoga6"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uttanasana_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga5" />

                <ImageView
                    android:id="@+id/yoga7"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vasisthasana_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga6" />

                <ImageView
                    android:id="@+id/yoga8"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/card_bg"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/virabhadrasana_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/yoga7" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>